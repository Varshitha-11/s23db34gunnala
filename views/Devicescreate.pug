extends layout

block content
  h1= title
  form(id='DevicesForm', action="/resource/Devices", method="POST")
    div.form-group
      label.DevicesAttr(for='name') Devices name
      input#name(type='text', name='name')
    div.form-group
      label.DevicesAttr(for='color') Devices color
      input#color(type='text', name='color')
    div.form-group
      label.DevicesAttr(for='ram') Devices ram
      input#cramost(type='number', name='ram')
    input(type="submit")

  script.
    document.forms['DevicesForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Save succeeded")
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Save failed " + error)
      });
    });
